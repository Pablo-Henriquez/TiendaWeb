@model IEnumerable<TiendaWeb.Models.Stock>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width-device-width, initial-scale=1.0" charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/Content/Juego.css">
</head>
<body>
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="~/Inicio/Index">
                        <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                        <span class="tittle">Inicio</span>
                    </a>
                </li>
                <li>
                    <a href="~/Juegos/Index">
                        <span class="icon"><ion-icon name="game-controller-outline"></ion-icon></span>
                        <span class="tittle">Juegos</span>
                    </a>
                </li>
                <li>
                    <a href="~/Categorias/Index">
                        <span class="icon"><ion-icon name="library-outline"></ion-icon></span>
                        <span class="tittle">Categorías</span>
                    </a>
                </li>
                <li>
                    <a href="~/Plataformas/Index">
                        <span class="icon"><ion-icon name="desktop-outline"></ion-icon></span>
                        <span class="tittle">Plataformas</span>
                    </a>
                </li>
                <li>
                    <a href="~/Companias/Index">
                        <span class="icon"><ion-icon name="business-outline"></ion-icon></span>
                        <span class="tittle">Compañía</span>
                    </a>
                </li>
                <li>
                    <a href="~/Stocks/Index">
                        <span class="icon"><ion-icon name="layers-outline"></ion-icon></span>
                        <span class="tittle">Stock</span>
                    </a>
                </li>
                <li>
                    <a href="~/Locals/Index">
                        <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                        <span class="tittle">Local</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="icon"><ion-icon name="people-outline"></ion-icon></span>
                        <span class="tittle">Cliente</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon"><ion-icon name="settings-outline"></ion-icon></span>
                        <span class="tittle">Setting</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon"><ion-icon name="lock-open-outline"></ion-icon></span>
                        <span class="tittle">Password</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon"><ion-icon name="log-out-outline"></ion-icon></span>
                        <span class="tittle">Sign out</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main -->

        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>
            </div>

            <!-- Contenido -->

            <h2>Lista stock</h2>

            <p>
                @Html.ActionLink("Ingresar nuevo", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Juego.Codigo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Local.Nombre)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Juego.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Local.Nombre)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdStock }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.IdStock }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdStock })
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <script>
        //MenuToggle
        let toggle = document.querySelector('.toggle');
        let navigation = document.querySelector('.navigation');
        let main = document.querySelector('.main');

        toggle.onclick = function () {
            navigation.classList.toggle('active');
            main.classList.toggle('active');
        }


        //Hovered class
        let list = document.querySelectorAll('.navigation li');
        function activeLink() {
            list.forEach((item) =>
                item.classList.remove('hovered'));
            this.classList.add('hovered');
        }
        list.forEach((item) =>
            item.addEventListener('mouseover'), activeLink)
    </script>
</body>
</html>


